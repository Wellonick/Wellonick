
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<title>Информация о продукте</title>

<div class="compl">

    <h3>Дополнительная информация</h3>

    <br />

    @{
        foreach (var t in ViewBag.Coffee)
        {
            if (t.Id == ViewBag.Id)
            {
                <h2>@t.Name</h2>
                <br />
                <p>Что же это за Кофе?</p><br />
                <p>@t.AllDesc</p>

                <br />
                <br />
                <a href="/BuyCoffee/BuyCoffee/@t.Id" style="font-size: 25px; text-decoration: none; background-color: green; color: white; border: 4px solid green" class="obl>">Купить</a>
               <br />
               <br />
                <a href="/Product/Products" style="font-size: 23px; text-decoration: none; background-color: yellow; color: black; border: 5px solid black" class="obl>">Вернуться к остальным товарам</a>
                <br />
            }
        }
    }
</div>
